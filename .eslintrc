{
  "parser": "babel-eslint",
  "plugins": ["react", "react-native"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true,
      "modules": true
    }
  },
  "extends": ["eslint:recommended", "plugin:react/recommended", "airbnb-base"],
  "rules": {
    "arrow-body-style": "warn",
    "semi": [2, "always"],
    "react/no-unsafe": [1, {"checkAliases": true}]
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "globals": {
    "describe": false,
    "it": false,
    "expect": false,
    "jest": false
  }
}
